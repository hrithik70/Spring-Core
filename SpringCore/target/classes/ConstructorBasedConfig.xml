<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean
		class="com.hrithik.SpringCore.DependencyInjection.ConstructorBased.Employee"
		name="emp1">
		<constructor-arg value="11" />
		<constructor-arg value="Ramesh" />
		<constructor-arg ref="cmp1" />

	</bean>


	<bean
		class="com.hrithik.SpringCore.DependencyInjection.ConstructorBased.Company"
		name="cmp1">
		<constructor-arg value="1" />
		<constructor-arg value="TCS" />

	</bean>

</beans>